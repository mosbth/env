green=$( tput setaf 2 )
white=$( tput setaf 7 )
reset=$( tput sgr0 )
PS1_ORIG="\[$green\]\h\[$white\]:\w$\[$reset\] "
PS1_ALT1="\[$green\]\h\[$white\]:\w\n\[$green\]$\[$reset\] "
PS1_ALT2="\[$green\]\w\n$\[$reset\] "
PS1="$PS1_ALT1"

export LC_CTYPE="C.UTF-8"

export PATH="${PATH}:/usr/local/sbin:/sbin:/usr/sbin"
export PATH="./bin:bin/:vendor/bin:node_modules/.bin:$HOME/.composer/vendor/bin:$HOME/.npm-packages/bin:$HOME/bin:$PATH"

export EDITOR="vim"

# Color output
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

# History
export HISTFILESIZE=
export HISTSIZE=

# Locale
export PYTHONIOENCODING=UTF-8
export LANG=C.UTF-8
export LC_CTYPE=C.UTF-8

#eval `gnome-keyring-daemon --start`

# Disable ctrl-s
stty -ixon
